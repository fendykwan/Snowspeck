<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Snowspeck</PackageId>
        <PackageVersion>1.0.0</PackageVersion>
        <Authors>Tiago Ferreira Alves</Authors>
        <Description>A lightweight, thread-safe, extensible, and decodable Snowflake ID generator for .NET</Description>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/synpse/Snowspeck</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>snowflake;id;generator</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.0" />
    </ItemGroup>

</Project>
